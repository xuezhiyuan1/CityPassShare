<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#f13030"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <LinearLayout
            android:id="@+id/shouyehuabi_close111"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/btn_back_normal"
                android:id="@+id/image1"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        </LinearLayout>
        <TextView
            android:text="我的等级"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
  <LinearLayout
      android:gravity="center"
      android:orientation="horizontal"
      android:background="@drawable/cover_guider_bg"
      android:layout_width="match_parent"
      android:layout_height="100dp">
      <TextView
          android:layout_width="0dp"
          android:background="#fff"
          android:layout_weight="1"
          android:layout_height="2dp" />
      <com.example.think.citypass.myview.RoundImageView
          android:layout_width="50dp"
          android:id="@+id/level_image"
          android:src="@drawable/ania_weibo"
          android:layout_weight="1"
          android:layout_height="50dp" />
      <TextView
          android:layout_width="0dp"
          android:background="#fff"
          android:layout_weight="1"
          android:layout_height="1dp" />
      <TextView
          android:text="Lv2"
            android:background="@drawable/levelshape"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="30dp" />
      <TextView
          android:layout_width="0dp"
          android:background="#fff"
          android:layout_weight="1"
          android:layout_height="1dp" />
      <TextView
          android:text="Lv3"
          android:background="@drawable/levelshape"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="30dp" />
      <TextView
          android:layout_width="0dp"
          android:background="#fff"
          android:layout_weight="1"
          android:layout_height="1dp" />
      <TextView
          android:text="Lv4"
          android:background="@drawable/levelshape"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="30dp" />
      <TextView
          android:layout_width="0dp"
          android:background="#fff"
          android:layout_weight="1"
          android:layout_height="1dp" />
      <TextView
          android:text="Lv5"
          android:background="@drawable/levelshape"
          android:gravity="center"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="30dp" />
      <TextView
          android:background="#fff"
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="1dp" />
  </LinearLayout>
    <LinearLayout
        android:background="@drawable/cover_guidepageinfo_baby"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="30dp">
        <TextView
            android:textColor="#fff"
            android:background="@drawable/levels"
            android:gravity="center"
            android:text="你当前等级为LV1(新居民),成长值为100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:text="等级说明"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
         android:text="等级"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="头衔"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
           android:text="所需成长值"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
   <ScrollView
       android:layout_weight="1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ListView
               android:id="@+id/level_listview"
               android:layout_width="match_parent"
               android:layout_height="900dp"></ListView>
       </LinearLayout>
   </ScrollView>
</LinearLayout>