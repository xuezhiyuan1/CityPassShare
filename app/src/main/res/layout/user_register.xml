<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#50ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btn_back_login"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/ccoo_icon_back_666" />

        <TextView
            android:id="@+id/tv_title_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="快速注册"
            android:textColor="@color/color_666"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/cityname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="当前注册站点：洮南"
        android:textColor="@color/color_666"
        android:textSize="14dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_dra_edit_bg"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/editText_user_login_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:ems="10"
                android:hint="请输入你的手机号"
                android:maxLength="11"
                android:numeric="integer"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/login_edit_text"
                android:textColorHint="@color/color_ccc"
                android:textSize="16dp" >
            </EditText>

            <TextView
                android:id="@+id/textView_user_verify"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/getcode_select"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="#fff"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/login_edit_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical" >

            <EditText
                android:id="@+id/editText_user_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:hint="输入短信验证码"
                android:maxLength="6"
                android:numeric="integer"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColor="@color/login_edit_text"
                android:textColorHint="@color/color_ccc"
                android:textSize="16dp" >
            </EditText>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_user_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/btn_userlogin"
        android:padding="8dp"
        android:text="注       册"
        android:textColor="#fff"
        android:textSize="18dp" />

</LinearLayout>