<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f0"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_gridview"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/activity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/activity_title_image"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@mipmap/img_frame_background" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bbs_zhuanti_left" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/activity_title"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="的计算机嗲随机的"
                android:textColor="@color/color_333"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/activity_count_image"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ccoo_icon_look2" />

                <TextView
                    android:id="@+id/activity_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已有1023人感兴趣"
                    android:textColor="@color/color_999"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/activity_state"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/bbs_huodong_jieshu" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />
</LinearLayout>