<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/modelone_item_title"
            android:text="今日阳光明媚今日多云转晴"
            android:singleLine="true"
            android:layout_marginTop="8dp"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/modelone_item_author"
                android:text="第贵子"
                android:textColor="#615e5e"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/ccoo_icon_chakan"
                android:layout_marginLeft="30dp"

                android:layout_width="20dp"
                android:layout_height="15dp" />
            <TextView
                android:id="@+id/modelone_itemcount"
                android:text="121212"
                android:textColor="#918d8d"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:layout_width="80dp"
        android:layout_height="60dp" >
        <ImageView
            android:scaleType="fitXY"
            android:src="@drawable/zfz_qiuzu"
            android:id="@+id/modelone_image"
            android:layout_width="80dp"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>