<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<include
    layout="@layout/newhoust_title"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="#b7b7b7">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_search"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:weightSum="1">
        <EditText
            android:id="@+id/et_search"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/search_input_left"
            android:drawablePadding="3dp"
            android:layout_gravity="center_vertical"
            android:hint="请输入楼盘名称"
            android:inputType="text"
            android:textColorHint="@color/color_999"
            android:textSize="14dp"
            android:layout_weight="0.62" />
        <TextView
            android:id="@+id/imageView_addjob_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:visibility="visible"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="查询"
            android:background="@drawable/mygroup_comment_select"
            android:layout_weight="0.22" />
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/Map_LookHouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:gravity="center"
            android:visibility="visible"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="地图看房"
            android:background="@drawable/mygroup_comment_select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#e8e8e8"></LinearLayout>
    <LinearLayout
        android:id="@+id/array_tab_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/white_lower"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_down"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="区域"
            android:textColor="#787878"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:layout_margin="10dip"
            android:background="@color/grayline" />

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_down"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dip"
            android:text="价格"
            android:textColor="#787878"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:layout_margin="10dip"
            android:background="@color/grayline" />

        <TextView
            android:id="@+id/tv_salary"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_down"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="状态"
            android:textColor="#787878"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0.5dip"
            android:layout_height="fill_parent"
            android:layout_weight="0"
            android:layout_margin="10dip"
            android:background="@color/grayline" />

        <TextView
            android:id="@+id/tv_moreselect"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_arrow_down"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="10dip"
            android:singleLine="true"
            android:text="排序"
            android:textColor="#787878"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>