<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
     android:background="#f7f6f7"
    android:layout_height="wrap_content">
   <RelativeLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="60dp">
       <ImageView
           android:id="@+id/shouye_zb_item_image"
           android:background="@drawable/shouye_zb_select"
           android:src="@drawable/ccoo_icon_tieba"
           android:layout_width="50dp"
           android:layout_margin="5dp"
           android:layout_height="50dp" />

       <LinearLayout
           android:id="@+id/two"
           android:layout_toRightOf="@id/shouye_zb_item_image"
           android:orientation="vertical"
           android:layout_width="wrap_content"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/small_title"
               android:text="设置头像"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />
           <LinearLayout
               android:orientation="horizontal"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:layout_width="20dp"
                   android:src="@drawable/ccoo_icon_coin"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="5dp"
                   android:layout_height="20dp" />
                  <TextView
                      android:id="@+id/coin_one"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="12dp"
                      android:text="50"
                      android:layout_marginLeft="5dp"
                      android:layout_height="wrap_content" />

               <ImageView
                   android:layout_width="20dp"
                   android:src="@drawable/ccoo_icon_xunzhang"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="15dp"
                   android:layout_height="20dp" />
               <TextView
                   android:id="@+id/coin_two"
                   android:layout_width="wrap_content"
                   android:layout_marginTop="12dp"
                   android:text="100"
                   android:layout_marginLeft="5dp"
                   android:layout_height="wrap_content" />



           </LinearLayout>


       </LinearLayout>
       <Button
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:layout_marginRight="10dp"
           android:layout_width="50dp"
           android:text="领取"
           android:background="@drawable/mengbaoguide1"
           android:textSize="20sp"
           android:gravity="center"
           android:layout_marginLeft="150dp"
           android:layout_height="30dp"></Button>
   </RelativeLayout>
</LinearLayout>