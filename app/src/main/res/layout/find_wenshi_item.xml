<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@drawable/find_selector_layout"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageview_wenshi"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/find_bbs_test" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_textview_wenshi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="问事"
                android:textColor="@color/color_333"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/content_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="有问题 找答案"
                android:textColor="@color/color_999"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/other_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="2dp"
                android:text="提问 375   回复 442"
                android:textColor="@color/color_ccc"
                android:textSize="12dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/submit_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ccoo_dra_blue_null_yuan"
            android:paddingBottom="3dp"
            android:paddingLeft="11dp"
            android:paddingRight="11dp"
            android:paddingTop="3dp"
            android:text="提问"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/line" />

</LinearLayout>


