<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/boy_top_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#50ffffff"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/top_back"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ccoo_icon_back_666" />

            <TextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="标题"
                android:textColor="@color/color_666"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/top_more"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@drawable/ccoo_icon_user_666" />

            <ImageView
                android:id="@+id/top_share"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ccoo_icon_share_666" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/all_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="30dp">

                    <com.example.think.citypass.myview.RoundImageView
                        android:id="@+id/head_imageview"
                        android:layout_width="78dp"
                        android:layout_height="78dp"
                        android:src="@mipmap/ic_launcher"
                       android:scaleType="fitXY"
                        android:layout_marginLeft="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/sex_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/task_mylevel_bg1"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp">

                                <ImageView
                                    android:id="@+id/sex_imageview"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginBottom="2dp"
                                    android:layout_marginTop="2dp"
                                    android:src="@drawable/ccoo_icon_girl_white" />

                                <TextView
                                    android:id="@+id/age_textview"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="3dp"
                                    android:text="22"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/location_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="宏福苑小区"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/dengji_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:background="@drawable/ccoo_bg_dengji3"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="Lv.12"
                                android:textColor="@color/white"
                                android:textSize="11dp" />

                            <TextView
                                android:id="@+id/tag_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="街道主任"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/yinxiang_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/back_color_huxing"
                            android:paddingBottom="2dp"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:paddingTop="2dp"
                            android:text="还没有人评论过"
                            android:textColor="@color/white"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/guanzhu_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/back_beijibg"
                                android:paddingBottom="2dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="2dp"
                                android:text="关注  0"
                                android:textColor="@color/color_pink2"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/fensi_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/back_beijibg"
                                android:paddingBottom="2dp"
                                android:paddingLeft="8dp"
                                android:paddingRight="8dp"
                                android:paddingTop="2dp"
                                android:text="粉丝 0"
                                android:textColor="@color/color_pink2"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="6dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/xunzhang_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_dianji"
                        android:gravity="center"
                        android:clickable="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="勋章0"
                        android:textColor="#fff"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/gift_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/my_dianji"
                        android:gravity="center"
                        android:clickable="true"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="礼物0"
                        android:textColor="#fff"
                        android:textSize="16dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/ziliao_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:background="@drawable/my_dianji"
                        android:gravity="center"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:text="资料"
                        android:textColor="#fff"
                        android:textSize="16dp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@drawable/boy_bottom_bg"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="我在玩"
            android:textColor="@color/white" />
    </LinearLayout>

    <include
        android:id="@+id/my_zi_liao"
        layout="@layout/item_zi_liao">

    </include>




</LinearLayout>