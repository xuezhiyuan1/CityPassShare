<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/banqu_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/banqu_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/banqu_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/banqu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:text="波波大人"
            android:textColor="@color/top_text_color"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/banqu_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="关注：173"
            android:textColor="@color/back_02"
            android:textSize="14dp" />

    </LinearLayout>


    <Button
        android:id="@+id/banqu_canyu"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/banqu_canyubtn"
        android:text="关注"
        android:textColor="@color/white" />

</RelativeLayout>