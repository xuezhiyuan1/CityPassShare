<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:id="@+id/tiaozhuan"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/image_relay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="6dp">


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"/>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="190dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/cover_list_covergirl_left" />

        <RelativeLayout
            android:id="@+id/left_relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <ImageView
                android:id="@+id/left_image"
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:src="@drawable/cover_list_covergirl_people" />

            <TextView
                android:id="@+id/top_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="42dp"
                android:text="— 第1期 —"
                android:textColor="#fcc486"
                android:textSize="16dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_relay"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="~烟雨晨"
                android:textColor="#FB2478"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/top_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/back_two_cloor"
                android:gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="6dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/sex_image"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/my_main_man" />

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="22"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/star_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="天蝎座"
                    android:textColor="@color/white"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/feeling_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="单身"
                android:textColor="#FB2478"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/height_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/feeling_text"
                android:layout_marginTop="5dp"
                android:text="身高：75.5cm"
                android:textColor="#Fe573c"
                android:textSize="16dp"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/weight_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/height_text1"
                android:layout_marginTop="5dp"
                android:text="体重：20kg"
                android:textColor="#Fe573c"
                android:textSize="16dp"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/address_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/weight_text"
                android:layout_marginTop="5dp"
                android:background="@drawable/back_two_cloor"
                android:paddingBottom="2dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:paddingTop="2dp"
                android:text="宏福苑大街小区"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/position_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/address_text"
                android:layout_marginTop="15dp"
                android:text="模特"
                android:textColor="#Fe573c"
                android:textSize="16dp"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/position_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/address_text"
                android:layout_marginRight="3dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/position_text"
                android:src="@drawable/cover_list_covergirl_headimage" />

            <TextView
                android:id="@+id/description_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/position_text"
                android:layout_marginTop="5dp"
                android:text="如夏花般绚烂多彩的绽放"
                android:textColor="#Fe573c"
                android:textSize="14dp"
                android:textStyle="italic" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">


        <ImageView
            android:id="@+id/bottom_image1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/bottom_image2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/bottom_image3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:id="@+id/bottom_image4"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/love_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="等121人表示喜欢"
            android:textColor="@color/color_999"
            android:textSize="14dp" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/discuss_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/discuss_text"
                android:src="@drawable/ccoo_icon_message" />

            <TextView
                android:id="@+id/discuss_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="1234"
                android:textColor="@color/color_999"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
