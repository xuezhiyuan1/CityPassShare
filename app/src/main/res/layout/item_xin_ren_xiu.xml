<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tiaozhuan"
    android:clickable="true"
    android:background="@color/gray_bg"
    android:orientation="vertical">
<!--新人秀-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/mR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="@drawable/my_listview_selector"
        android:padding="10dp">

        <com.example.think.citypass.myview.RoundImageView
            android:id="@+id/head_image"
            android:layout_width="38dp"
            android:layout_height="38dp" />

        <RelativeLayout
            android:id="@+id/top_relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/head_image"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Dale"
                android:textColor="@color/color_666"
                android:textSize="14dp" />

            <LinearLayout
                android:id="@+id/sex_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/name_text"
                android:background="@drawable/back_color_one"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp">

                <ImageView
                    android:id="@+id/sex_image"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/my_main_women" />

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="22"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/position_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/sex_lay"
                android:text="会计师"
                android:textColor="@color/color_999"
                android:textSize="14dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_relay"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/head_image"
            android:text="北京昌平区宏福园"
            android:textColor="@color/color_ccc"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/image_lay"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/head_image"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/image3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_lay"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="10dp"
            android:text="2015-11-12"
            android:textColor="@color/color_ccc"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/attention_image"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@+id/image_lay"
            android:layout_marginRight="3dp"
            android:layout_marginTop="9dp"
            android:layout_toLeftOf="@+id/attention_text"
            android:src="@drawable/cover_newshow" />

        <TextView
            android:id="@+id/attention_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image_lay"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:text="关注"
            android:textColor="@color/orange"
            android:textSize="14dp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <View
        android:id="@+id/zhanwei_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray_bg" />


</LinearLayout>