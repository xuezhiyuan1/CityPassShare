<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/topbegin"   android:id="@+id/head_one"/>
    <include layout="@layout/topafter"   android:visibility="gone"
        android:id="@+id/head_two"
        />
</LinearLayout>



    <com.jude.rollviewpager.RollPagerView
        android:id="@+id/RollPagerView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        ></com.jude.rollviewpager.RollPagerView>








    <LinearLayout
        android:padding="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d1cdcd">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <LinearLayout
            android:background="@drawable/layoutselector"
            android:id="@+id/findwork_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/ico_jiudian"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="找工作"
                android:textColor="@color/line"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/layoutselector"
            android:id="@+id/findhouse_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:background="@mipmap/ico_hunjia"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="找房子"
                android:layout_marginTop="5dp"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:background="@drawable/layoutselector"
            android:id="@+id/fenleilife_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:background="@mipmap/ico_quanbu"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="分类生活"
                android:layout_marginTop="5dp"
                android:textColor="@color/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/layoutselector"
            android:id="@+id/tongcheng_layout"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:background="@mipmap/ico_teyue"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:text="同城咨询"
                android:textColor="@color/line"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>









    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#d1cdcd">

    </LinearLayout>


</LinearLayout>